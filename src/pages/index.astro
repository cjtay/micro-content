---

<Layout title="testing title">
	<h1 class="font-bold text-red-500 text-4xl">Micro-content Staging</h1>
	<p>
		Please do not share any links to this site. This is a staging site for
		internal testing purposes only.
	</p>
	<!-- <Image
		src={Testimage}
		alt="Singapore VisionCare Programme"
		class="rounded-lg h-64 w-64 object-cover object-center"
		format="webp"
		quality={20}
	/> -->
<!-- Button to open the chat -->
<button data-modal-target="chatbotModal" data-modal-toggle="chatbotModal" class="fixed bottom-5 left-5 bg-blue-500 hover:bg-blue-600 text-white p-4 rounded-full shadow-lg z-50">
	Chat ðŸ’¬
  </button>
  
  <!-- Chatbot Modal -->
  <div id="chatbotModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed inset-0 z-50 flex justify-center items-center bg-black bg-opacity-50">
	<div class="relative p-4 w-full max-w-md h-full md:h-auto flex items-center justify-center">
	  
	  <!-- Modal content (NO opacity-0 here) -->
	  <div id="chatbotContent" class="relative bg-white rounded-lg shadow dark:bg-gray-800 flex flex-col h-[80vh] 
				  transform transition-all duration-300 scale-95 opacity-0">
		
		<!-- Modal header -->
		<div class="flex justify-between items-center p-4 border-b rounded-t dark:border-gray-600">
		  <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
			Chatbot
		  </h3>
		  <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center" data-modal-hide="chatbotModal">
			<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
			  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 011.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
			</svg>
		  </button>
		</div>
  
		<!-- Modal body -->
		<div class="flex-1 overflow-y-auto p-4 space-y-4">
		  <div class="flex items-start space-x-2">
			<div class="bg-gray-100 p-2 rounded-lg">
			  <p>Hi! ðŸ‘‹ How can I help you?</p>
			</div>
		  </div>
		</div>
  
		<!-- Modal footer -->
		<div class="p-4 border-t dark:border-gray-600">
		  <form class="flex space-x-2">
			<input type="text" class="flex-1 border rounded-lg p-2" placeholder="Type your message..." />
			<button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg">Send</button>
		  </form>
		</div>
  
	  </div>
	</div>
  </div>
  
  <!-- Flowbite JS -->
  <script src="https://unpkg.com/flowbite@2.2.1/dist/flowbite.min.js"></script>
  
  <!-- Script to manually control animation for chatbot modal -->
  <script>
	document.addEventListener('DOMContentLoaded', function () {
	  const modal = document.getElementById('chatbotModal');
	  const modalContent = document.getElementById('chatbotContent');
  
	  modal?.addEventListener('flowbite:show', () => {
		// Animate modal content when showing
		modalContent?.classList.remove('opacity-0', 'scale-95');
		modalContent?.classList.add('opacity-100', 'scale-100');
	  });
  
	  modal?.addEventListener('flowbite:hide', () => {
		// Animate modal content when hiding
		modalContent?.classList.remove('opacity-100', 'scale-100');
		modalContent?.classList.add('opacity-0', 'scale-95');
	  });
	});
  </script>
  


</Layout>
